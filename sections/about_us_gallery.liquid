{% if section.settings.enable == true %}
<div data-section-id="{{ section.id }}" class="section__about-us-gallery lg-mt-90 md-mt-50 xs-mt-30">
  <div class="nova-container">
    <div class="row display-flex">
      <div class="nova-column col-md-3">
      </div>
      <div class="nova-column col-md-3">
        <div class="colunm-bottom">
          {% if section.settings.image != blank %}
            <a href="{{ section.settings.image | img_url: 'master' }}" data-rel="lightcase"><img src="{{ section.settings.image | img_url: 'x530', crop: 'center' }}" /></a>
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
          {% endif %}
        </div>
      </div>
      <div class="nova-column col-md-6">
        {% if section.settings.image_2 != blank %}
          <a href="{{ section.settings.image_2 | img_url: 'master' }}" data-rel="lightcase"><img src="{{ section.settings.image_2 | img_url: '1200x728', crop: 'center' }}" /></a>
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>
    <div class="row xs-mt-30">
      <div class="col-md-7">
        <div class="row">
          <div class="col-md-6">
            {% if section.settings.image_3 != blank %}
                <a href="{{ section.settings.image_3 | img_url: 'master' }}" data-rel="lightcase"><img src="{{ section.settings.image_3 | img_url: '680x500', crop: 'center' }}" /></a>
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
          <div class="col-md-6">
            {% if section.settings.image_4 != blank %}
                <a href="{{ section.settings.image_4 | img_url: 'master' }}" data-rel="lightcase"><img src="{{ section.settings.image_4 | img_url: '680x500', crop: 'center' }}" /></a>
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-md-5">
        {% if section.settings.image_5 != blank %}
            <a href="{{ section.settings.image_5 | img_url: 'master' }}" data-rel="lightcase"><img src="{{ section.settings.image_5 | img_url: '990x500', crop: 'center' }}" /></a>
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}
{% schema %}
{
  "name": "Content Box",
  "settings": [
    {
      "type": "header",
      "content": "Gallery Settings"
    },
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable Gallery",
      "default": true
    },
    {
      "type": "header",
      "content": "Gallery Images"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image 01"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 02"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 03"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 04"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 05"
    }
  ],
  "presets": [
    {
      "name": "Gallery",
      "category": "About Us"
    }
  ]
}
{% endschema %}
