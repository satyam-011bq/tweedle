<div class="footer-inner">
    <div class="container">
        <div class="row">
            <div class="footer-left-inner">
                <div class="footer-column footer-column-1 col-xs-12 col-sm-6 col-md-3">
                    <div class="footer-column footer-col-1">
                        {% if section.settings.logo_use_image %}
                        <a class="footer_middle_logo light" href="/">
                            <img src="{{ footer_logo }}" alt=""/>
                        </a>
                        <a class="footer_middle_logo dark" href="/">
                            <img src="{{ footer_logo_white }}" alt=""/>
                        </a>
                        {% endif %}
                        {% if section.settings.footer_text != '' %}
                        <div class="content-text">
                            {{ section.settings.footer_text }}
                        </div>
                        {% endif %}
                        {% if section.settings.footer_social_share != '' %}
                        <div class="footer-area-socials">
                            <div class="social-media-link">
                                {{ section.settings.footer_social_share }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="footer-column footer-column-2 col-xs-12 col-sm-6 col-md-3">
                    <div class="footer-column footer-col-2">
                        {% if section.settings.footer_title_col2_type1 != '' %}
                        <div class="footer-column-title">
                            {% if settings.language_enable %}
                            <h4 class="lang1">{{ section.settings.footer_title_col2_type1 | split: '[lang2]' | first }}</h4>
                            <h4 class="lang2">{{ section.settings.footer_title_col2_type1 | split: '[lang2]' | last }}</h4>
                            {% else %}
                            <h4>{{ section.settings.footer_title_col2_type1 | split: '[lang2]' | first }}</h4>
                            {% endif %}
                        </div>
                        {% endif %}
                        {% assign list = linklists[section.settings.footer_linklist_1_type1] %}
                        <ul class="footer-list">
                            {% for link in list.links %}
                            <li class="theme-color">
                                <a href="{{ link.url }}">
                                    {% if settings.language_enable %}
                                    <span class="lang1">{{ link.title | split: '|' | first }}</span>
                                    <span class="lang2">{{ link.title | split: '|' | last }}</span>
                                    {% else %}
                                    {{ link.title | split: '|' | first }}
                                    {% endif %}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="footer-column footer-column-3 col-xs-12 col-sm-6 col-md-3">
                    <div class="footer-column footer-col-3">
                        {% if section.settings.footer_title_col3_type1 != '' %}
                        <div class="footer-column-title">
                            {% if settings.language_enable %}
                            <h4 class="lang1">{{ section.settings.footer_title_col3_type1 | split: '[lang2]' | first }}</h4>
                            <h4 class="lang2">{{ section.settings.footer_title_col3_type1 | split: '[lang2]' | last }}</h4>
                            {% else %}
                            <h4>{{ section.settings.footer_title_col3_type1 | split: '[lang2]' | first }}</h4>
                            {% endif %}
                        </div>
                        {% endif %}
                        {% assign list = linklists[section.settings.footer_linklist_2_type1] %}
                        <ul class="footer-list">
                            {% for link in list.links %}
                            <li class="theme-color">
                                <a href="{{ link.url }}">
                                    {% if settings.language_enable %}
                                    <span class="lang1">{{ link.title | split: '|' | first }}</span>
                                    <span class="lang2">{{ link.title | split: '|' | last }}</span>
                                    {% else %}
                                    {{ link.title | split: '|' | first }}
                                    {% endif %}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="footer-column footer-column-4 col-xs-12 col-sm-6 col-md-3">
                    <div class="footer-column footer-col-5">
                        {% if section.settings.footer_title_col5_type1 != '' %}
                        <div class="footer-column-title">
                            {% if settings.language_enable %}
                            <h4 class="lang1">{{ section.settings.footer_title_col5_type1 | split: '[lang2]' | first }}</h4>
                            <h4 class="lang2">{{ section.settings.footer_title_col5_type1 | split: '[lang2]' | last }}</h4>
                            {% else %}
                            <h4>{{ section.settings.footer_title_col5_type1 | split: '[lang2]' | first }}</h4>
                            {% endif %}
                        </div>
                        {% endif %}
                        {% if section.settings.column_5_content == 'instagram' %}
                            {% include 'footer_instagram' %}
                        {% elsif section.settings.column_5_content == 'map'  %}
                            {% include 'footer_map' %}
                        {% else %}
                            {% include 'footer_newsletter_subscribe' %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer-bottom">
  <div class="container">
    <div class="row">
      {% if section.settings.footer_bottom_copyright != '' %}
      <div class="copyright-text">
          {{ section.settings.footer_bottom_copyright }}
      </div>
      {% endif %}
    </div>
  </div>
</div>
